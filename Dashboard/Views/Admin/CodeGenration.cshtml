 @model IEnumerable<Benaa.Core.Entities.General.MoneyCode>;
@{
    Layout = "~/Views/Shared/_layoutAdmin.cshtml";
}

<div>
    <!-- Main Content -->
    <div class="content">
        <div class="content-header">
            <h2 class="title"> اكواد الشحن </h2>
        </div>
        <div class="content-header">
            @using (Html.BeginForm("CodeGenration", "Admin", FormMethod.Post))
            {
                <div class="col-5 mt-4 ">
                    <div style="display: flex; height: 30vh; align-items: flex-start;
                     justify-content: space-around;flex-direction: column; ;">
                        <label for="" class="form-label fs-4">المبلغ الاجمالي</label>
                      @*<input type="number" style="width: 40vh; height: 4vh; border-radius: 6px;" class="form-control m-2"
                               id="amount-input"> *@
                        @Html.TextBox("amount")
                        <label for="" class="form-label fs-4">عدد اكواد الشحن</label>
                        @Html.TextBox("number")
                      @*<input type="number" style="width: 40vh; height: 4vh; border-radius: 6px;" class="form-control m-2"
                               id="quantity-input">*@
                    </div>

                    <div style="display: flex;
                          height: 61vh;
                          align-items: flex-end;
                          justify-content: center;">
                        <button style="width: 30vh;" class="btn btn-primary w-75 text-center" type="submit">
                            انشاء
                        </button>
                    </div>

                </div>

            }
            <div class="col-6 container-fluid card rounded m-5 mb-3"
                 style="margin-left: 15%; border-radius: 12px; width: 30%; background-color: rgb(252 252 252); height:90vh;">
                <div class="row" style="justify-content: space-around;">
                    <button class="btn btn-primary col-4 " onclick="exportToText()">تصدير</button>
                    <button class="btn btn-primary col-4" onclick="clearContent()">حذف</button>
                    <hr size="5">
                </div>
                <div style="color: black; text-align: center; max-height: 690px; overflow-y: auto;" id="code-list">
                    @if (Model == null){}
                    else
                    {
                        foreach (var code in Model)
                        {
                            <span>السعر: @code.Amount الكود: @code.Code</span>
                        }
                    }
                </div>

            </div>
        </div>


    </div>

</div>
 