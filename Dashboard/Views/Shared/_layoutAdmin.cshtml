<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
	@* <link rel="stylesheet" href="~/bootstrap-5.2.0-dist/bootstrap-5.2.0-dist/css/"> *@
	<title>منصة بناء التعليمية</title>
	<link rel="icon" href="~/public/group-4831.svg" type="image/svg+xml">
	<link rel="stylesheet" href="~/Cairo/Cairo-VariableFont_slnt,wght.ttf" />
	<link href="~/css/fontawsome/all.min.css" rel="stylesheet">
	<link rel="stylesheet" href="~/css/main.css">
	<link rel="stylesheet" href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'>
	<link rel="stylesheet" href="~/css/style.css">

	<title>لوحة تحكم عربية</title>
</head>

<body>


	<div class="container-fluid">

		<!-- sidebar -->
		<div class="sidebar">
			<ul class="nav-list">
				<li class="nav-item brand-name">
					<a href="">
						<span class="icon">
							<img src="../public/group-4831.svg" alt="" width="35px">
						</span>
						<span class="title"> منصة بناء التعلمية</span>
					</a>
				</li>
				<li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Teachers" ? "active" : "")">
					<a href="@Url.Action("Teachers", "Admin")">
						<span class="icon">
							<i class='bx bx-md bx-home'></i>
						</span>
						<span class="title">المعلمين الجدد</span>
					</a>
				</li>

				<li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Reports" ? "active" : "") ">
					<a href="@Url.Action("Reports", "Admin")">
						<span class="icon">
							<i class='bx bx-info-circle'></i>
						</span>
						<span class="title">البلاغات</span>
					</a>
				</li>
				<li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "CodeGenration" ? "active" : "") ">
					<a href="@Url.Action("CodeGenration", "Admin")">
						<span class="icon">
							<i class="    bx bx-md bx-key"></i>
						</span>
						<span class="title">اكواد الشحن</span>
					</a>
				</li>
				<li class="nav-item">
					<a href="@Url.Action("Logout", "Authentcation")">
						<span class="icon">
							<i class="bx bx-log-out-circle"></i>
						</span>
						<span class="title">تسجيل الخروج</span>
					</a>
				</li>
			</ul>
		</div>

		<!-- Main Section -->
		<div class="main">
			<!-- Top Bar -->
			<div class="topbar">
				<!-- Toggle button -->
				<div class="toggle">
					<i class='bx bx-menu' name="menu"></i>
					<i class='bx bx-x' name="close"></i>
				</div>
				<!-- Search field -->
				<div class="search">
					<label for="">
						<input type="text" placeholder="بحث">
						<i class='bx bx-search'></i>
					</label>
				</div>

				<!-- User profile -->
				<div class="user">

					<!-- Theme Toggler -->
					<div class="theme-toggler">
						<span class="icon">
							<i class='bx bx-sun' name="sun"></i>
							<!-- <i class='bx bx-moon' name="moon"></i> -->
						</span>
					</div>



				</div>
			</div>

			<!-- main content -->
			<div class="mainCard">
				<div class="section">
					@RenderBody()
				</div>

			</div>
			<script src="~/js/ad_new_teacher.js"></script>
			<script src="~/js/ad_generate_code.js"></script>
			<script src="~/js/alpine.js"></script>
			<script src="~/js/app.js"></script>
			<script src="~/js/theme-script.js"></script>
			
</body>

</html>